<!DOCTYPE html>
<html lang="en">
  <%- include('../../partials/head-head')  %> 
  <script src="/js/productValidatorFront.js"></script>
  <body>
    <div class="container-scroller">
      <!-- partial:../../partials/_navbar.html -->
        <%- include('../../partials/bar')  %> 
      <!-- partial -->
      <div class="container-fluid page-body-wrapper">
        <!-- partial:../../partials/_sidebar.html -->
        <%- include('../../partials/sidebar') %> 
        <!-- partial -->
        <div class="main-panel">
          <div class="content-wrapper">
            <div class="page-header">
              <h3 class="page-title"> Productos </h3>
              <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item"><a href="#">Editar productos</a></li>
                  <li class="breadcrumb-item active" aria-current="page">Admin</li>
                </ol>
              </nav>
            </div>
            <div class="row">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Editar producto</h4>
                  <h4 class="name-editProduct" style="text-align: center; font-weight:700" ><%= producto.name %> </h4>
                  <p class="card-description"> </p>
                </div> 
                 <form class="forms-sample" action="/admin/productos/<%= producto.id %>?_method=PUT" method="POST"> 
                    <div class="form-group">
                      <label for="name" class="form-label">Nombre del producto</label>
                      <input type="text" name="name" class="form-control" id="name" placeholder="Ej: Chandon" value="<%= producto.name %>">
                      <small class="errorMessage" id="nameErrors" ></small>
                      </div>
                    <div class="form-group">
                      <label for="price">Precio</label>
                      <input type="number" name="price" class="form-control" id="price" placeholder="Ej: 1500" value="<%= producto.price %>">
                      <small class="errorMessage" id="priceErrors" ></small>  
                    </div>
                    
                    <div class="form-group">
                      <label for="discount">Descuento</label>
                      <input type="number" name="discount" class="form-control" id="discount" placeholder="Ej: 1500" value="<%= producto.discount %>">
                      <small class="errorMessage" id="discountErrors" ></small>
                      </div>
                      <div class="form-group">
                        <label for="category">Categoria</label>
                        <select name="category" class="form-select"  id="category" aria-label="Default select example">
                        <option selected disabled hidden value="">Categoría</option>
                        <% categories.forEach(category => { %> 
                          <option value="<%- category.id %>" <%= (locals.old && old.categories) && old.categories === category.id ? "selected" : "" %>><%- category.name %> </option>
                          <%  }) %>
                          <small class="errorMessage" id="categoryErrors" ></small> 
                      </select>
                      </select>
                    </div>
                    <div class="form-group">
                      <label>Imagen del producto</label>
                      <div class="input-group col-xs-12">
                        <input type="file" class="form-control file-upload-info"  id="image" placeholder="Upload Image">
                        <small class="errorMessage" id="imageErrors" ></small>
                      </div>
                    </div>
                    <div class="form-group">
                      <label for="stock">Stock</label>
                      <div class="form-check form-switch">
                        <input <%= producto.stock ? "checked" : "" %> class="check-input"  name="stock" type="checkbox" role="switch" id="stock">
                      </div>
                      <small class="errorMessage" id="stockErrors" ></small>
                    </div>
                    <div class="form-group">
                      <label for="description">Descripción</label>
                      <textarea name="description" class="form-control" id="description" rows="3"><%= producto.description %></textarea>
                      <small class="errorMessage" id="descriptionErrors" ></small>
                    </div>
                    <button type="submit" class="btn btn-gradient-primary me-2">Agregar</button>
                    <button class="btn btn-light">Borrar</button>
                  </form>
                </div>
              </div>
          </div>
          <!-- content-wrapper ends -->
          <!-- partial:../../partials/_footer.html -->
          <footer class="footer">
            <div class="container-fluid d-flex justify-content-between">
              <span class="text-muted d-block text-center text-sm-start d-sm-inline-block">Copyright © bootstrapdash.com 2021</span>
              <span class="float-none float-sm-end mt-1 mt-sm-0 text-end"> Free <a href="https://www.bootstrapdash.com/bootstrap-admin-template/" target="_blank">Bootstrap admin template</a> from Bootstrapdash.com</span>
            </div>
          </footer>
          <!-- partial -->
        </div>
        <!-- main-panel ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src=""></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="../../assets/vendors/chart.js/Chart.min.js"></script>
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src=""></script>
    <script src=""></script>
    <script src=""></script>
    <!-- endinject -->
    <!-- Custom js for this page -->
    <script src="../../assets/js/chart.js"></script>
    <!-- End custom js for this page -->
  </body>
</html>