<!-- HEAD -->
    <%- include('partials/head') %> 
    <link rel="stylesheet" href="/css/styles.css">
<!-- END HEAD -->
    


<body>
    <!-- HEADER -->
    <%- include('partials/header') %>  
    <!-- END HEADER -->
    <%- include('partials/sidebar') %>

    <!-- MENU -->
    <div class="checkbox-Tienda">
        <legend class="legendCategories" >Nuestros Productos</legend>
                <div class="next-previous-tienda"> 
                </div>
            <div class="body-de-tienda">
                <div class="page-content">
                    <% productos.forEach(producto => { %>  
                        <div class="product-container-tienda">
                            <% if (producto.productImage[0]) { %>
                                <img src="/images/productos/<%- producto.productImage[0].imageName %>"/> 
                            <% } else { %>
                                <img src="/images/productos/predeterminada.jpg"/>
                            <% } %> 
                            <div class="bloque-ofertas-tienda">
                                <div class="contenidoTienda">
                                    <h3 class="menuh3" >  <%= producto.name  %> </h3>
                                            <h1 class="tienda-h1">$<%= producto.price  %>,00</h1>
                                            <a href="/productos/detalle/<%- producto.id  %>" id="aProducto"><button class="button-tienda button-add" id="buttontienda" >Agregar</button></a>
                                </div>
                            </div>
                        </div>

                    <% }) %>
                </div>
            </div>
    </div>
                    <div class="next-previous-tienda">
                        <a href="#" id="a-tienda" class="tienda-previous">&laquo; Previous</a>
                        <a href="#" id="a-tienda"class="tienda-next">Next &raquo;</a>
                    </div>
    

<!-- FIN MENU -->

    <!-- -------------------------------------------------- -->
<!-- JS del home -->
    <%- include('partials/js') %> 
<!-- END JS del home -->

<!-- FOOTER -->
    <%- include('partials/footer') %> 
<!-- END FOOTER -->
    </body>
</html>
