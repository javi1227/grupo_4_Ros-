<!-- MENU -->
    <!-- Slideshow container -->
<div class="slideshow-container">

  <!-- Full-width images with number and caption text -->
  <div class="mySlides fade">
    <img src="/images/FOTOOOOOOOOOO.jpg" style="width:100%"">
    <div class="text">Rosé</div>
  </div>

  <div class="mySlides fade">
    <img src="/images/FONDO2.jpg" style="width:100%">
    <div class="text">El vino es poesía en una botella </div>
  </div>

  <div class="mySlides fade">
    <img src="/images/FONDO3.jpg" style="width:100%">
    <div class="text">La pasión de compartir</div>
  </div>

  <!-- Next and previous buttons -->
  <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
  <a class="next" onclick="plusSlides(1)">&#10095;</a>
</div>
<br>

<!-- The dots/circles -->
<div style="text-align:center">
  <span class="dot" onclick="currentSlide(1)"></span>
  <span class="dot" onclick="currentSlide(2)"></span>
  <span class="dot" onclick="currentSlide(3)"></span>
</div>

<!-- FIN SLIDESHOW -->

    <!-- -------------------------------------------------- -->
    <div class="total-media-pagina">
      <div class="media__pagina">
        <div class="mediaPagina">
          <div class="primeralinea">
            <div class="iconoMP">
              <span class="iconito vc_icon_element-icon fas fa-truck"></span>
            </div>
            <h3>ENTREGAS EN TODO EL PAÍS</h3>
            <p>Gratis y en 24hs en CABA y GBA a partir de $5000</p>
          </div>
        </div>

        <div class="mediaPagina">
          <div class="primeralinea">
            <div class="iconoMP">
              <span
                class="iconito vc_icon_element-icon fas fa-credit-card"
              ></span>
            </div>
            <h3>PAGÁ COMO PREFIERAS</h3>
            <p>
              Tarjetas de crédito y débito, Rapipago™ y Pagofácil™,
              transferencia bancaria y efectivo contra entrega
            </p>
          </div>
        </div>

        <div class="mediaPagina">
          <div class="primeralinea">
            <div class="iconoMP">
              <span
                class="iconito vc_icon_element-icon fas fa-shield-alt"
              ></span>
            </div>
            <h3>NUESTRO SITIO ES SEGURO</h3>
            <p>Tus datos e información de pago están seguros y encriptados</p>
          </div>
        </div>
      </div>
    </div>
    <!-- Total-media-pagina -->

    <!-- fin media main -->
    <section class="ofertas-menu">
      <hr class="hr-mediaPagina" />
      <div class="ofertas">
        <h2>PRODUCTOS DESTACADOS</h2>
       <!--  <h3>con descuentos</h3> -->
      </div>

      <!-- MENU -->

      <div class="menu-contenedor">
          
          <% productsInSale.forEach(producto => { %>
            <div class="contenedor">
              <img src="images/<%= producto.image %> " />
              <div class="bloque-ofertas">
                <span class="titulo-figure">
                    <h3> <%= producto.name  %>  </h3>
                </span>
                <div class="precios">
                  <span class="precio-figure">$<%= producto.discount %></span>
                  <span class="oferta-figure">$<%= producto.price  %></span>
                </div>
              </div>
              <div class="Añadir-carro-figure">
                <a href="/productos/detalle/<%- producto.id  %> "><i class="Carro fa-solid fa-cart-arrow-down"></i></a>
              </div>
            </div>
          <% }) %>
      
      </div>
    </section>
    <!--FIN DIV MENU-CONTENEDOR-->

    <div class="ultimoMenu">
      <div class="ultimoMenu1">
        <img src="/images/BannerChandon.png" alt="Banner" />
      </div>
      <div class="ultimoMenu2">
        <h2>TODOS SON BIENVENIDOS A NUESTRA MESA</h2>
        <p>
          Te invitamos a compartir nuestro espíritu de exploración, coraje y
          deleite. <br/>
          ¡Sumate para descubrir juntos un mundo de posibilidades!
        </p>
        <br />
        <div class="ultimoMenuRedes">
          <a href="#"><i class="iconoMenu fa-brands fa-facebook"></i></a>
          <a href="#"><i class="iconoMenu fa-brands fa-github"></i></a>
          <a href="#"><i class="iconoMenu fa-brands fa-instagram"></i></a>
        </div>
      </div>
    </div>

<!-- FIN MENU -->

